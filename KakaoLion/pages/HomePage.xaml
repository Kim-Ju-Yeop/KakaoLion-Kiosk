<Page x:Class="KakaoLion.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KakaoLion"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="HomePage">

    <Grid>
        <MediaElement Source="resources/video/video.mp4" LoadedBehavior="Play" Stretch="Fill"/>
        <StackPanel Background="#66000000" />

        <Label Content="카카오프렌즈샵에 오신 것을 환영합니다!" FontSize="50px" Foreground="White" FontWeight="Bold" Margin="0, 0, 0, 320" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Button Width="500px" Height="140px" Background="#FFCB44" Content="주문하기" FontSize="50px" FontWeight="Bold" Margin="0, 0, 0, 140" HorizontalAlignment="Center" VerticalAlignment="Bottom" BorderThickness="0" Click="orderButton_Click"/>
    </Grid>
</Page>
